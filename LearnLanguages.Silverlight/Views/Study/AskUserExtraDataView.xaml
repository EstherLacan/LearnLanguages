<UserControl x:Class="LearnLanguages.Silverlight.Views.AskUserExtraDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
  <Border Style="{StaticResource DebugBorder}">
    <Grid x:Name="LayoutRoot" Background="White">
      <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition Height="25"/>
      </Grid.RowDefinitions>
      
      <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <TextBlock Text="{Binding Path=LabelTextNativeLanguageText}" 
                   Margin="5"/>
        <TextBlock Text="{Binding Path=Model_NativeLanguageText}" 
                   Margin="5"/>
        <Button x:Name="SelectLanguage" 
                Margin="5"/>
      </StackPanel>
      
      <Button Grid.Row="1"
              x:Name="Save" 
              Content="Save"
              Width="75"
              HorizontalAlignment="Center" />
    </Grid>
  </Border>
</UserControl>
